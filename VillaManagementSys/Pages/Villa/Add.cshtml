@page
@model VillaManagementSys.Pages.Villa.AddModel
@{
}
<h1>افزودن ویلای جدید</h1>
<form method="post">
<input type="text" name="txtName" placeholder="نام ویلا" /> <br/>
<input type="text" name="txtChamberNo" placeholder="تعداد اتاق" /> <br/>
<input type="text" name="txtArea" placeholder="مساحت" /> <br/>
<label for="ddlCity" >انتخاب شهر</label>
<select name="ddlCity">
        @{
            foreach(var city in @Model.Cities)
            {
                <option value="@city.Id">@city.Name</option>
            }
        }
</select>
<input type="text" name="txtCity" placeholder ="شهر"/> <br/>
<input type="text" name="txtAddress" placeholder="نشانی" /> <br/>
<input type="text" name="txtDescription" placeholder="شرح"/> <br/>
<input type="text" name="txtCapacity" placeholder="ظرفیت" /> <br/>
<input type="text" name="txtPhone" placeholder="تلفن" /> <br/>
<input type="submit" value="ثبت اطلاعات ویلا"/>
<input type="reset" value="پاک کردن فرم"/>
</form>